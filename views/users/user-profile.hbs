{{#if userInSession }}
  <h2>Welcome, {{ userInSession.username }}!</h2>
  <p>This is your profile page my friend!</p>
  <button>
    <a href="/auth/user-profile">Reload the page</a>
  </button>
{{else}}
  <p>Still no logged in user, sorry!</p>
{{/if}}

  <form id="logout-form" action="/auth/logout" method="POST">
    <button>Logout</button>
  </form>